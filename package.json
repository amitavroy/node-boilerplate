{
  "name": "node_boilerplate",
  "version": "1.0.0",
  "description": "A node application boilerplate setting on Express and Typescript",
  "main": "app.js",
  "scripts": {
    "watch-server": "cross-env NODE_ENV=development nodemon --watch './**/*' -e ts,tsx --exec 'ts-node' server.ts",
    "watch": "webpack --watch --config webpack.config.js",
    "nodemon": "nodemon dist/server/server.js"
  },
  "keywords": [
    "node"
  ],
  "author": "Amitav Roy",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^3.0.7",
    "express": "^4.17.1",
    "path": "^0.12.7"
  },
  "devDependencies": {
    "cross-env": "^6.0.3",
    "ts-loader": "^6.2.1",
    "ts-node": "^8.5.4",
    "typescript": "^3.7.4",
    "uglifyjs-webpack-plugin": "^2.2.0",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.10"
  }
}
