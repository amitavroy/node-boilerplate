{
  "name": "node_boilerplate",
  "version": "1.0.0",
  "description": "A node application boilerplate setting on Express and Typescript",
  "main": "app.js",
  "scripts": {
    "watch": "cross-env NODE_ENV=development nodemon --watch './**/*' -e ts,tsx --exec 'ts-node' server.ts",
    "watch-server": "webpack --watch --config webpack.config.js",
    "nodemon": "nodemon dist/server.js",
    "production": "webpack --config webpack.config.prod.js"
  },
  "keywords": [
    "node"
  ],
  "author": "Amitav Roy",
  "license": "MIT",
  "dependencies": {
    "@types/bluebird": "^3.5.29",
    "@types/ejs": "^3.0.0",
    "@types/express": "^4.17.2",
    "@types/validator": "^12.0.1",
    "axios": "^0.19.1",
    "bcrypt": "^3.0.7",
    "dotenv": "^8.2.0",
    "ejs": "^3.0.1",
    "express": "^4.17.1",
    "mysql2": "^2.1.0",
    "path": "^0.12.7",
    "sequelize": "^5.21.3"
  },
  "devDependencies": {
    "@types/node": "^13.1.5",
    "cross-env": "^6.0.3",
    "ts-loader": "^6.2.1",
    "ts-node": "^8.5.4",
    "typescript": "^3.7.4",
    "uglifyjs-webpack-plugin": "^2.2.0",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.10"
  }
}
